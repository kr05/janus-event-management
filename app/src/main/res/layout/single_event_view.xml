<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/eventImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_image" />

    <TextView
        android:id="@+id/eventTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del evento"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/eventLocationTextView"
        app:layout_constraintStart_toStartOf="@+id/eventLocationTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/eventLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lugar del evento"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/eventDateTextView"
        app:layout_constraintStart_toStartOf="@+id/eventDateTextView"
        app:layout_constraintTop_toBottomOf="@+id/eventTitleTextView" />

    <TextView
        android:id="@+id/eventDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del evento"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/eventDetailsTextView"
        app:layout_constraintStart_toStartOf="@+id/eventDetailsTextView"
        app:layout_constraintTop_toBottomOf="@+id/eventLocationTextView" />

    <TextView
        android:id="@+id/eventDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eventImageView"
        app:layout_constraintTop_toBottomOf="@+id/eventDateTextView" />

    <TextView
        android:id="@+id/eventCobradoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:text="cobrado"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>